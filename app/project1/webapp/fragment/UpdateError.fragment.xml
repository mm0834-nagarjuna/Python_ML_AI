<!-- WarningDialog.fragment.xml -->
<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="warningDialog" title="Warning" type="Message" state="Warning" >
        <content>
            <VBox>
                <Text id="warningTitle" text="{/warningTitle}" wrapping="true" />
                <Text id="warningMessage" text="{/warningMessage}" wrapping="true" />
            </VBox>
        </content>
        
        <beginButton>
            <Button text="Retry" press="onRetryWarningDialog" />
        </beginButton>
        <endButton>
        <Button text="Close" press="onCloseWarningDialog" />
        </endButton>
        
    </Dialog>
</core:FragmentDefinition>
